<?xml version="1.0" encoding="utf-8"?>
<com.example.socialmediaapp.view.container.ClickablePanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:orientation="vertical">

        <com.example.socialmediaapp.view.button.UserActiveView
            android:id="@+id/user_active"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            app:button_background="@drawable/avatar" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:text="Luffy"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</com.example.socialmediaapp.view.container.ClickablePanel>