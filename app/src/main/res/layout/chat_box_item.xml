<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">


    <com.example.socialmediaapp.customview.button.UserActiveView
        android:id="@+id/avatar_view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="5dp"
        app:button_background="@drawable/avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center_vertical"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:text="Luffy"
            android:textColor="@color/grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/message_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="Đụ má jack"
                android:textColor="#757575"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cnt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_vertical"
                android:text="13 thg 10"
                android:textColor="#757575"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <com.example.socialmediaapp.customview.AvatarView
        android:id="@+id/seen_state_view"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:button_background="@drawable/check_circle_filled_24"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        />

</LinearLayout>