<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp">


    <LinearLayout
        android:id="@+id/main_content_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <com.example.socialmediaapp.customview.button.CircleButton
                android:id="@+id/erase_post_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                app:background_bound="25dp"
                app:button_background="@drawable/cross_small_24" />

            <com.example.socialmediaapp.customview.button.CircleButton
                android:id="@+id/help_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:background_bound="15dp"
                app:button_background="@drawable/question_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fullname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="Android"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cnt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="3 days"
                    android:textColor="#757575"
                    android:textSize="13sp" />


            </LinearLayout>

            <com.example.socialmediaapp.customview.button.CircleButton
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                app:background_bound="40dp"
                app:button_background="@drawable/user_24" />

        </LinearLayout>

        <com.example.socialmediaapp.customview.textview.PostContentTextVIew
            android:id="@+id/status_content"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <com.example.socialmediaapp.customview.container.ClickablePanel
            android:id="@+id/media_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:request_press_paint="false"></com.example.socialmediaapp.customview.container.ClickablePanel>

        <com.example.socialmediaapp.customview.container.ClickablePanel
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp">

            <LinearLayout
                android:id="@+id/like_info_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cnt_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:drawableLeft="@drawable/facebook_reactions"
                    android:drawablePadding="3dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="1.712"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cnt_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto"
                        android:text="3 shares"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/cnt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto"
                        android:text="3 comments"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>


        </com.example.socialmediaapp.customview.container.ClickablePanel>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#dee2e6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">


            <com.example.socialmediaapp.customview.button.LikeButton
                android:id="@+id/like_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:background_bound="22dp"
                app:button_background="@drawable/like_24"
                app:button_text="Like"
                app:button_text_color="#757575"
                app:button_text_font="@font/roboto"
                app:button_text_size="14sp"
                app:padding_between_text_and_background="5dp" />


            <com.example.socialmediaapp.customview.button.PostButton
                android:id="@+id/comment_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:background_bound="22dp"
                app:button_background="@drawable/comment_24"
                app:button_text="Comment"
                app:button_text_color="#757575"
                app:button_text_font="@font/roboto"
                app:button_text_size="14sp"

                app:padding_between_text_and_background="5dp"

                />

            <com.example.socialmediaapp.customview.button.PostButton
                android:id="@+id/share_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:background_bound="22dp"
                app:button_background="@drawable/share_24"
                app:button_text="Share"

                app:button_text_color="#757575"
                app:button_text_font="@font/roboto"
                app:button_text_size="14sp"
                app:padding_between_text_and_background="5dp"

                />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>