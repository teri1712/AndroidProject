<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingTop="10dp">

    <com.example.socialmediaapp.view.AvatarView
        android:id="@+id/avatar_view"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        app:button_background="@drawable/zoro" />

    <com.example.socialmediaapp.view.message.MessageClipFrame
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/main_text_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3fffffff"
            android:paddingLeft="14dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="13dp">

            <com.example.socialmediaapp.layoutviews.items.message.TextingAnimateView
                android:id="@+id/texting_view"
                android:layout_width="32dp"
                android:layout_height="15dp" />
        </FrameLayout>
    </com.example.socialmediaapp.view.message.MessageClipFrame>


</LinearLayout>
