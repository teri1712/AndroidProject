<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <HorizontalScrollView
        android:id="@+id/scroll_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/page_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/posts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <FrameLayout
                android:id="@+id/media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <FrameLayout
                android:id="@+id/friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <FrameLayout
                android:id="@+id/notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"

                />

            <FrameLayout
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white" />


        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/command_frame"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/command_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.example.socialmediaapp.customview.button.ActiveFragmentButton
                android:id="@+id/home_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:active_background="@drawable/active_home_24"
                app:inactive_background="@drawable/inactive_home_24"
                app:is_active="true" />

            <com.example.socialmediaapp.customview.button.ActiveFragmentButton
                android:id="@+id/media_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:active_background="@drawable/active_meida_24"
                app:inactive_background="@drawable/inactive_media_24"
                app:is_active="false" />

            <com.example.socialmediaapp.customview.button.ActiveFragmentButton
                android:id="@+id/friends_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:active_background="@drawable/active_users_24"
                app:inactive_background="@drawable/inactive_friend_24"
                app:is_active="false" />

            <com.example.socialmediaapp.customview.button.ActiveFragmentButton
                android:id="@+id/notify_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:active_background="@drawable/active_bell_24"
                app:inactive_background="@drawable/inactive_bell_24"
                app:is_active="false"

                />

            <com.example.socialmediaapp.customview.button.ActiveFragmentButton
                android:id="@+id/settings_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:active_background="@drawable/active_list_24"
                app:inactive_background="@drawable/inactive_list_24"
                app:is_active="false"

                />

        </LinearLayout>


    </FrameLayout>

</FrameLayout>