<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.example.socialmediaapp.customview.button.CircleButton
            android:id="@+id/avatar_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            app:background_bound="40dp"
            app:button_background="@drawable/avatar" />

        <com.example.socialmediaapp.customview.RoundedEditText
            android:id="@+id/open_create_post"
            android:layout_width="296dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/select_image"
            android:layout_toEndOf="@+id/avatar_button"
            android:clickable="true"
            android:focusable="false"
            android:paddingStart="18dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textSize="16sp"
            app:custom_corner_ratio="50"
            app:default_info="What are you thinking?" />

        <com.example.socialmediaapp.customview.button.CircleButton
            android:id="@+id/select_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:background_bound="25dp"
            app:button_background="@drawable/album" />

    </RelativeLayout>
</FrameLayout>