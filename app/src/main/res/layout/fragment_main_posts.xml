<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1f000000"
    tools:context=".home.fragment.main.PostFragment">

    <com.example.socialmediaapp.customview.container.SpinningFrame
        android:id="@+id/spinning_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/post_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>


    </com.example.socialmediaapp.customview.container.SpinningFrame>

    <LinearLayout
        android:id="@+id/header_panel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/lato_bold"
            android:text="facebook"
            android:textColor="#0866FF"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <com.example.socialmediaapp.customview.button.CircleButton
                android:id="@+id/message_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="top"
                app:background_bound="30dp"
                app:button_background="@drawable/messenger" />

            <com.example.socialmediaapp.customview.button.CircleButton
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="top"
                app:background_bound="20dp"
                app:button_background="@drawable/search_24" />
        </LinearLayout>
    </LinearLayout>

    <com.example.socialmediaapp.customview.progress.spinner.CustomSpinningView
        android:id="@+id/load_spinner"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="55dp"
        app:button_background_color="#757575" />

</FrameLayout>