<?xml version="1.0" encoding="utf-8"?>
<com.example.socialmediaapp.view.container.DragPanel xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dragged_view_id="@id/view_image_frame">

    <FrameLayout
        android:id="@+id/background_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.9"
        android:background="@color/black" />

    <com.example.socialmediaapp.view.container.ClickablePanel
        android:id="@+id/view_image_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:request_press_paint="false">

        <ImageView
            android:id="@+id/zoom_out_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="center"
            android:src="@drawable/suzy_background" />
    </com.example.socialmediaapp.view.container.ClickablePanel>

    <FrameLayout
        android:id="@+id/command_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0"
        android:background="#A9000000"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/command_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="top"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="Bae Suzy"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <com.example.socialmediaapp.view.textview.PostContentTextVIew
                android:id="@+id/status_content"
                android:layout_width="match_parent"
                android:layout_height="37dp"

                android:layout_gravity="center_vertical"
                android:fontFamily="@font/roboto"
                android:text="He does smile"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cnt_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:gravity="top"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:text="2 minutes ago"
                android:textColor="#adb5bd"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cnt_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/facebook_reactions"
                    android:drawablePadding="1dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="1.712"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/cnt_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/cnt_share"
                    android:fontFamily="@font/roboto"
                    android:text="3 comments"
                    android:textColor="@color/white"
                    android:textSize="13sp" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="#757575" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">


                <com.example.socialmediaapp.view.button.LikeButton
                    android:id="@+id/like_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:background_bound="22dp"
                    app:button_background="@drawable/active_like_24"
                    app:button_text="Like"
                    app:button_text_color="@color/white"
                    app:button_text_font="@font/roboto"
                    app:button_text_size="14sp"
                    app:padding_between_text_and_background="5dp" />


                <com.example.socialmediaapp.view.button.PostButton
                    android:id="@+id/comment_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:background_bound="22dp"
                    app:button_background="@drawable/white_comment_24"
                    app:button_text="Comment"
                    app:button_text_color="@color/white"
                    app:button_text_font="@font/roboto"
                    app:button_text_size="14sp"

                    app:padding_between_text_and_background="5dp"

                    />

                <com.example.socialmediaapp.view.button.PostButton
                    android:id="@+id/share_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:background_bound="22dp"
                    app:button_background="@drawable/white_share_24"
                    app:button_text="Share"

                    app:button_text_color="@color/white"
                    app:button_text_font="@font/roboto"
                    app:button_text_size="14sp"
                    app:padding_between_text_and_background="5dp" />


            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</com.example.socialmediaapp.view.container.DragPanel>