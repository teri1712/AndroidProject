<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Set up"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <com.example.socialmediaapp.customview.progress.state.StateView
                android:id="@+id/step1_state"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:state="completed" />


            <com.example.socialmediaapp.customview.progress.state.PipeView
                android:id="@+id/step1_pipe"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_margin="8dp"
                android:layout_weight="1" />


            <com.example.socialmediaapp.customview.progress.state.StateView
                android:id="@+id/step2_state"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:state="in progress" />


            <com.example.socialmediaapp.customview.progress.state.PipeView
                android:id="@+id/step2_pipe"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_margin="8dp"
                android:layout_weight="1" />

            <com.example.socialmediaapp.customview.progress.state.StateView
                android:id="@+id/step3_state"
                android:layout_width="25dp"
                android:layout_height="25dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="STEP 1"
                    android:textColor="@color/grey"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Avatar"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/step1_state_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#009688"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="STEP 2"
                    android:textColor="@color/grey"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Information"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/step2_state_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="#0866FF"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingStart="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="STEP 3"
                    android:textColor="@color/grey"
                    android:textSize="11sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Recovery"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/step3_state_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""
                    android:textColor="#0866FF"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="450dp">

            <HorizontalScrollView
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/avatar_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/avatar_image"
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:layout_gravity="bottom"
                            android:scaleType="centerCrop"
                            android:src="@drawable/emyeu" />

                        <com.example.socialmediaapp.customview.mask.AvatarCropMask
                            android:layout_width="match_parent"
                            android:layout_height="450dp"
                            android:layout_gravity="bottom" />

                        <com.example.socialmediaapp.customview.button.CircleButton
                            android:id="@+id/select_avatar_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="15dp"
                            app:background_bound="20dp"
                            app:button_background="@drawable/camera_24"
                            app:button_background_color="#dee2e6" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/information_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:orientation="vertical"
                            android:paddingTop="30dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Full name"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <com.example.socialmediaapp.customview.RoundedEditText
                                android:id="@+id/fullname_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:nextFocusDown="@+id/alias_edit_text"

                                android:paddingStart="15dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:textCursorDrawable="@null"
                                android:textSize="16sp"
                                app:custom_corner_ratio="10"
                                app:default_info="Ensure you have a name" />

                            <TextView
                                android:id="@+id/usernameValidationStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="5dp"
                                android:text="Fullname can't not be empty"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Alias"
                                android:textColor="@color/black"
                                android:textSize="17sp" />


                            <com.example.socialmediaapp.customview.RoundedEditText
                                android:id="@+id/alias_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext"
                                android:inputType="text"

                                android:maxLines="1"
                                android:nextFocusDown="@+id/gender_edit_text"
                                android:paddingStart="15dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:textCursorDrawable="@null"
                                android:textSize="16sp"
                                app:custom_corner_ratio="10"
                                app:default_info="Used as your unique nicname" />


                            <TextView
                                android:id="@+id/aliasValidationStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="5dp"
                                android:text="Alias can't not be empty"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Gender"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                            <com.example.socialmediaapp.customview.RoundedEditText
                                android:id="@+id/gender_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:maxLines="1"
                                android:nextFocusDown="@+id/birthday_edit_text"
                                android:paddingStart="15dp"
                                android:paddingTop="0dp"
                                android:paddingBottom="0dp"
                                android:textCursorDrawable="@null"
                                android:textSize="16sp"
                                app:custom_corner_ratio="10"
                                app:default_info="male or female" />

                            <TextView
                                android:id="@+id/genderValidationStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="5dp"
                                android:text="Gender should either 'male' or 'female'"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="16sp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center_vertical"
                                android:paddingLeft="5dp"
                                android:text="Birthday"
                                android:textColor="@color/black"
                                android:textSize="17sp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.example.socialmediaapp.customview.RoundedEditText
                                    android:id="@+id/birthday_edit_text"
                                    android:layout_width="0dp"
                                    android:layout_height="40dp"
                                    android:layout_weight="1"
                                    android:inputType="text"


                                    android:paddingStart="15dp"
                                    android:paddingTop="0dp"
                                    android:paddingBottom="0dp"
                                    android:textCursorDrawable="@null"
                                    android:textSize="16sp"
                                    app:custom_corner_ratio="10"
                                    app:default_info="Example : 2002-12-17" />


                                <com.example.socialmediaapp.customview.button.CircleButton
                                    android:id="@+id/date_picker_button"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    app:background_bound="35dp"
                                    app:button_background="@drawable/calendar"
                                    app:button_background_color="#1F0866FF" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/birthdayValidationStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/roboto"
                                android:paddingLeft="5dp"
                                android:text="Birthday should in form mm/DD/yy"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="16sp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/recovery_frame"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </HorizontalScrollView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.example.socialmediaapp.customview.progress.dot.DotBlueProgress
                android:id="@+id/progress_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                app:count="3"
                app:dot_margin="5"
                app:dot_size="20"
                app:window_count="3" />


        </FrameLayout>

        <com.example.socialmediaapp.customview.button.RoundedButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            app:button_background_color="#0866FF"
            app:button_text="Next"
            app:button_text_color="@color/white"
            app:button_text_font="@font/roboto"
            app:button_text_size="16sp" />
    </LinearLayout>


    <com.example.socialmediaapp.customview.progress.spinner.CustomSpinningView
        android:id="@+id/spinner"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

</FrameLayout>