<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <LinearLayout
        android:id="@+id/main_content_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.socialmediaapp.customview.button.CircleButton
            android:id="@+id/avatar_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:background_bound="40dp"
            app:button_background="@drawable/user_24" />

        <LinearLayout
            android:id="@+id/information_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <com.example.socialmediaapp.customview.container.RoundedPanel
                android:id="@+id/background_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="7dp"
                android:paddingRight="20dp"
                android:paddingBottom="7dp"
                app:custom_corner_ratio="50">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="Android"
                        android:textColor="@color/black"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/comment_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.example.socialmediaapp.customview.container.RoundedPanel>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxHeight="220dp"
                android:visibility="gone"
                app:shapeAppearanceOverlay="@style/RoundedCorners" />

            <LinearLayout
                android:id="@+id/like_info_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cnt_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="12 hours"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <com.example.socialmediaapp.customview.textview.LikeTextView
                    android:id="@+id/like_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="2dp"
                    android:text="Like"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <com.example.socialmediaapp.customview.textview.ClickableTextView
                    android:id="@+id/reply_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center_vertical"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="2dp"
                    android:text="Reply"
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cnt_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableRight="@drawable/like"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="5"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reply_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.socialmediaapp.customview.progress.spinner.CustomSpinningView
                    android:id="@+id/load_spinner"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    app:button_background_color="#757575" />

                <com.example.socialmediaapp.customview.container.ClickablePanel
                    android:id="@+id/view_more_reply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp">

                    <TextView
                        android:id="@+id/count_reply_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:text="View replies (4)"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                </com.example.socialmediaapp.customview.container.ClickablePanel>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>