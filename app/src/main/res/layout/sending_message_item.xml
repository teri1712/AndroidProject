<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/msg_clipped_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <com.example.socialmediaapp.customview.message.ClippedMessageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:message_item_order="3">

        <FrameLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/purple_200"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:paddingRight="12dp"
            android:paddingBottom="7dp">

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:maxWidth="250dp"
                android:padding="0dp"
                android:text="đóm quãng ngãi nguuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuuu"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </FrameLayout>

        <ImageView
            android:id="@+id/image_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nami"
            android:visibility="gone" />


    </com.example.socialmediaapp.customview.message.ClippedMessageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/roboto"
        android:padding="0dp"
        android:text="sending..."
        android:textColor="@color/white"
        android:textSize="15sp" />
</LinearLayout>
