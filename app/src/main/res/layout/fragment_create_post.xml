<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/edit_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <com.example.socialmediaapp.customview.button.CircleButton
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    app:background_bound="30dp"
                    app:button_background="@drawable/back_24" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:text="Create post"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <com.example.socialmediaapp.customview.button.RoundedButton
                    android:id="@+id/post_button"
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:button_text="Post"
                    app:button_text_color="#adb5bd"
                    app:button_text_size="18sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#e9ecef" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <com.example.socialmediaapp.customview.button.CircleButton
                    android:id="@+id/avatar_button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="5dp"
                    app:button_background="@drawable/suzy_avatar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="top"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:text="Bae Suzy"
                        android:textColor="@color/black"
                        android:textSize="19sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="28dp"
                        android:layout_marginTop="7dp">

                        <com.example.socialmediaapp.customview.button.RoundedButton
                            android:id="@+id/tag_friend_button"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                            app:background_bound="15dp"
                            app:button_background="@drawable/active_users_24"
                            app:button_background_color="#140866FF"
                            app:button_text="Friend"
                            app:button_text_color="#0866FF"
                            app:button_text_size="13sp"
                            app:padding_between_text_and_background="8dp" />

                        <com.example.socialmediaapp.customview.button.RoundedButton
                            android:id="@+id/select_album_button"
                            android:layout_width="85dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            app:background_bound="15dp"
                            app:button_background="@drawable/plus_24"
                            app:button_background_color="#140866FF"

                            app:button_text="Album"

                            app:button_text_color="#0866FF"
                            app:button_text_size="13sp"
                            app:padding_between_text_and_background="5dp" />

                        <com.example.socialmediaapp.customview.button.RoundedButton
                            android:id="@+id/post_with_instagram_button"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            app:background_bound="15dp"
                            app:button_background="@drawable/instagram_24"
                            app:button_background_color="#140866FF"
                            app:button_text="Instagram"

                            app:button_text_color="#0866FF"
                            app:button_text_size="13sp"
                            app:padding_between_text_and_background="8dp"

                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <com.example.socialmediaapp.customview.DefaultBackgroundEditText
                android:id="@+id/post_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="top"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:textCursorDrawable="@null"
                android:textSize="18sp"
                app:default_info="What's on your mind?"

                />

            <FrameLayout
                android:id="@+id/media_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >


                <ImageView
                    android:id="@+id/media_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.example.socialmediaapp.customview.container.ClickablePanel
                    android:id="@+id/play_selected_video"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#A0000000" />
                    <View
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/play_24"
                        android:backgroundTint="@color/white" />
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/circle_stroke_shape"
                        android:backgroundTint="@color/white" />


                </com.example.socialmediaapp.customview.container.ClickablePanel>

                <com.example.socialmediaapp.customview.button.CircleButton
                    android:id="@+id/remove_media_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    app:background_bound="20dp"
                    app:button_background="@drawable/cross_small_24"
                    app:button_background_color="#18000000" />
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/media_picker_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.socialmediaapp.customview.container.ClickablePanel
                android:id="@+id/select_picture_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#e9ecef" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/album" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text="Picture"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

            </com.example.socialmediaapp.customview.container.ClickablePanel>

            <com.example.socialmediaapp.customview.container.ClickablePanel
                android:id="@+id/select_video_button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#e9ecef" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/reel" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text="Video"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </com.example.socialmediaapp.customview.container.ClickablePanel>

            <com.example.socialmediaapp.customview.container.ClickablePanel
                android:id="@+id/open_camera_button"
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#e9ecef" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/camera" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/roboto"
                        android:gravity="center_vertical"
                        android:text="Camera"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>
            </com.example.socialmediaapp.customview.container.ClickablePanel>


        </LinearLayout>
    </FrameLayout>


</FrameLayout>