<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <com.example.socialmediaapp.view.button.CircleButton
        android:id="@+id/avatar_button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        app:background_bound="80dp"
        app:button_background="@drawable/big_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto"
            android:gravity="top"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:text="Trần Nguyễn Quy"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/cnt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/roboto"
            android:text="3 houres ago" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <com.example.socialmediaapp.view.button.RoundedButton
                android:id="@+id/accept_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                app:button_text_font="@font/roboto_medium"
                android:gravity="center"
                app:button_text_color="@color/white"
                app:button_text_size="15sp"
                app:button_background_color="#0866FF"
                app:button_text="Accept" />

            <com.example.socialmediaapp.view.button.RoundedButton
                android:id="@+id/refuse_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                app:button_text_font="@font/roboto_medium"
                android:gravity="center"
                app:button_text="Refuse"
                app:button_text_color="@color/black"
                app:button_text_size="15sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>